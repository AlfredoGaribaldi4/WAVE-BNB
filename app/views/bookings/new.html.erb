<h1>Add a new Booking</h1>

<%= simple_form_for [@board, @booking] do |f| %>
  <%= f.input :date_check_in, as: :date %>
  <%= f.input :date_check_out, as: :date %>
  <%= f.submit "Book this board!" %>
<% end %>

<% if @booking.errors.any? %>
  <div class="alert alert-danger rounded alert-dismissible fade show">
      <%= "You cannot rent your own board!" %>
  </div>
<% end %>
