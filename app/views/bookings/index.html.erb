<div class="container">

    <h1>My bookings</h1>
    <ul>
      <% @bookings.each do |booking| %>
        <li> <%= booking.id %></li>
      <% end %>
    </ul>

    <hr>

    <h1>My Boards</h1>
    <% @boards.each do |board| %>
      <%= board.title %> - <%= board.description %> | <%= link_to "delete", board_path(board), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <hr>
      <% board.bookings.each do |booking| %>
        <%= booking.board.title %> | <%= link_to "delete", bookings_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <p>Status: <%= booking.status %></p> <%= link_to "accept", booking_accept_path(booking) %> | <%= link_to "decline", booking_decline_path(booking) %>
        <hr>
      <% end %>
    <% end %>
</div>
